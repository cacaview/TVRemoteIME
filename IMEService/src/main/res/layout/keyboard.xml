<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:focusable="true">

    <!-- Number Row -->
    <LinearLayout
        android:id="@+id/topLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/kb_key_height"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button style="@style/btn_input_style" android:text="1" />
        <Button style="@style/btn_input_style" android:text="2" />
        <Button style="@style/btn_input_style" android:text="3" />
        <Button style="@style/btn_input_style" android:text="4" />
        <Button style="@style/btn_input_style" android:text="5" />
        <Button style="@style/btn_input_style" android:text="6" />
        <Button style="@style/btn_input_style" android:text="7" />
        <Button style="@style/btn_input_style" android:text="8" />
        <Button style="@style/btn_input_style" android:text="9" />
        <Button style="@style/btn_input_style" android:text="0" android:layout_marginEnd="0dp" />

    </LinearLayout>

    <!-- QWERTY Row -->
    <LinearLayout
        android:id="@+id/qweLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/kb_key_height"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLine">

        <Button style="@style/btn_input_style" android:text="Q" />
        <Button style="@style/btn_input_style" android:text="W" />
        <Button style="@style/btn_input_style" android:text="E" />
        <Button style="@style/btn_input_style" android:text="R" />
        <Button style="@style/btn_input_style" android:text="T" />
        <Button style="@style/btn_input_style" android:text="Y" />
        <Button style="@style/btn_input_style" android:text="U" />
        <Button style="@style/btn_input_style" android:text="I" />
        <Button style="@style/btn_input_style" android:text="O" />
        <Button style="@style/btn_input_style" android:text="P" android:layout_marginEnd="0dp" />

    </LinearLayout>

    <!-- ASDF Row -->
    <LinearLayout
        android:id="@+id/asdLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/kb_key_height"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qweLine">

        <Button style="@style/btn_input_style" android:text="A" />
        <Button style="@style/btn_input_style" android:text="S" />
        <Button style="@style/btn_input_style" android:text="D" />
        <Button style="@style/btn_input_style" android:text="F" />
        <Button style="@style/btn_input_style" android:text="G" />
        <Button style="@style/btn_input_style" android:text="H" />
        <Button style="@style/btn_input_style" android:text="J" />
        <Button style="@style/btn_input_style" android:text="K" />
        <Button style="@style/btn_input_style" android:text="L" android:layout_marginEnd="0dp" />

    </LinearLayout>

    <!-- ZXCV Row -->
    <LinearLayout
        android:id="@+id/zxcLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/kb_key_height"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/asdLine">

        <ImageButton
            android:id="@+id/btnCaps"
            style="@style/btn_special_style"
            android:src="@drawable/shift_icon"
            android:contentDescription="Caps Lock" />

        <Button style="@style/btn_input_style" android:text="Z" />
        <Button style="@style/btn_input_style" android:text="X" />
        <Button style="@style/btn_input_style" android:text="C" />
        <Button style="@style/btn_input_style" android:text="V" />
        <Button style="@style/btn_input_style" android:text="B" />
        <Button style="@style/btn_input_style" android:text="N" />
        <Button style="@style/btn_input_style" android:text="M" />

        <ImageButton
            android:id="@+id/btnDelete"
            style="@style/btn_special_style"
            android:src="@drawable/delete_icon"
            android:layout_marginEnd="0dp"
            android:contentDescription="Delete" />

    </LinearLayout>

    <!-- Bottom Row -->
    <LinearLayout
        android:id="@+id/bottomLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/kb_key_height"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zxcLine">

        <Button style="@style/btn_input_style" android:text="," android:layout_weight="0.8" />
        <Button style="@style/btn_input_style" android:text="." android:layout_weight="0.8" />

        <ImageButton
            android:id="@+id/btnSpace"
            style="@style/btn_action_style"
            android:layout_weight="4"
            android:src="@drawable/space_icon"
            android:contentDescription="Space" />

        <Button style="@style/btn_input_style" android:text="?" android:layout_weight="0.8" />

        <ImageButton
            android:id="@+id/btnEnter"
            style="@style/btn_action_style"
            android:layout_weight="1.5"
            android:src="@drawable/enter_icon"
            android:contentDescription="Enter" />

        <ImageButton
            android:id="@+id/btnHelp"
            style="@style/btn_special_style"
            android:layout_weight="1"
            android:src="@drawable/net_icon"
            android:contentDescription="Help" />

        <Button
            android:id="@+id/btnClose"
            style="@style/btn_input_style"
            android:layout_weight="0.8"
            android:layout_marginEnd="0dp"
            android:text="▼"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Help Dialog -->
    <FrameLayout
        android:id="@+id/helpDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:background="@drawable/dialog_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dialog Header -->
            <LinearLayout
                android:id="@+id/titlelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_primary"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="远程输入请扫描或直接访问以下地址"
                    android:textColor="@color/md_theme_onPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Dialog Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/ivQRCode"
                    android:layout_width="@dimen/qrWH"
                    android:layout_height="@dimen/qrWH"
                    android:background="#F5F5F5"
                    android:padding="8dp"
                    android:contentDescription="QR Code" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/md_theme_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
